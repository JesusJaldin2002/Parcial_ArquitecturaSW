<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_border">

    <!-- Informaci贸n de la ubicaci贸n -->
    <TextView
        android:id="@+id/tvIdUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: 1"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvNombreUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre: Ubicaci贸n 1"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvReferenciaUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referencia: Cerca de la plaza"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvUrlUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="URL: google.com/maps"
        android:textSize="16sp"
        android:layout_marginTop="4dp" />

    <!-- Botones de acci贸n -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnEditarUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnEliminarUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:backgroundTint="@color/secondary_color"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
