<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Editar Orden"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Fecha de la Orden -->
    <EditText
        android:id="@+id/etFechaOrdenEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de la Orden"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Estado de la Orden -->
    <EditText
        android:id="@+id/etEstadoOrdenEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Estado de la Orden"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Total de la Orden -->
    <EditText
        android:id="@+id/etTotalOrdenEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Spinner para seleccionar cliente -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cliente:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerClienteEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Spinner para seleccionar repartidor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repartidor:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerRepartidorEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Botones Cancelar y Guardar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancelarOrdenEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/secondary_color"
            android:padding="8dp"
            android:text="Cancelar"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnGuardarOrdenEditar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/primary_color"
            android:padding="8dp"
            android:text="Guardar"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
