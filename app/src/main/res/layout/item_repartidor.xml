<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/rounded_border">

    <!-- Información del repartidor -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIdRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 1"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvNombreRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre: Juan Pérez"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvNroTelefonoRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teléfono: 123-456-789"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnEditarRepartidor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Editar"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnEliminarRepartidor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Eliminar"
            android:backgroundTint="@color/secondary_color"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
