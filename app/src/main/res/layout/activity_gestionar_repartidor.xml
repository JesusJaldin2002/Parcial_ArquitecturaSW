<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título centrado en la parte superior -->
        <TextView
            android:id="@+id/tvRegistrarRepartidor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar Repartidor"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="70dp"
            android:gravity="center" />

        <!-- Nombre del repartidor -->
        <EditText
            android:id="@+id/etNombreRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/edittext_background"
            android:hint="Nombre del Repartidor"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="30dp"/>

        <!-- Número de teléfono del repartidor -->
        <EditText
            android:id="@+id/etNroTelefonoRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/edittext_background"
            android:hint="Número de Teléfono"
            android:inputType="phone"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <!-- Botones de acción -->
        <Button
            android:id="@+id/btnRegistrarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar Repartidor"
            android:backgroundTint="@color/primary_color"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="60dp"/>

        <Button
            android:id="@+id/btnListarRepartidores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Listar Repartidores"
            android:backgroundTint="@color/secondary_color"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnCancelarRepartidor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver atrás"
            android:backgroundTint="@color/secondary_color"
            android:textColor="@android:color/white"
            android:padding="16dp" />
    </LinearLayout>
</ScrollView>
