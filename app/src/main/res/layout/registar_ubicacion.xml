<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvRegistrarUbicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-black"
        android:text="Registrar Ubicación"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Campo Nombre -->
    <EditText
        android:id="@+id/etNombreUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Nombre..."
        android:inputType="text"
        android:padding="12dp" />

    <!-- Campo Referencia -->
    <EditText
        android:id="@+id/etReferenciaUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Referencia..."
        android:inputType="text"
        android:padding="12dp" />

    <!-- Campo Link de Google Maps -->
    <EditText
        android:id="@+id/etLinkGoogleMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Link de Google Maps"
        android:inputType="textUri"
        android:padding="12dp" />

    <!-- Imagen adicional -->
    <ImageView
        android:id="@+id/imgUbicacion"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ubicaciontuto" />

    <!-- Botón Guardar -->
    <Button
        android:id="@+id/btnGuardarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/primary_color"
        android:padding="12dp"
        android:text="Guardar"
        android:textColor="@android:color/white" />

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolverUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondary_color"
        android:padding="12dp"
        android:text="Volver atrás"
        android:textColor="@android:color/white" />
</LinearLayout>
