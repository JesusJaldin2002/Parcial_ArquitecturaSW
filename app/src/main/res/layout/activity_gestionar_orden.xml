<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!-- Título de la pantalla -->
        <TextView
            android:id="@+id/tvRegistrarOrden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="Registrar Orden"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Fecha de la orden -->
        <EditText
            android:id="@+id/etFechaOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:clickable="true"
            android:focusable="false"
            android:hint="Fecha de la Orden (dd/mm/yyyy)"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <!-- Cliente -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Cliente:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerCliente"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_background" />

        <!-- Botones -->
        <Button
            android:id="@+id/btnRegistrarOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/primary_color"
            android:padding="16dp"
            android:text="Agregar Orden"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnListarOrdenes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/secondary_color"
            android:padding="16dp"
            android:text="Listar Órdenes"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnCancelarOrden"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondary_color"
            android:padding="16dp"
            android:text="Volver atrás"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
